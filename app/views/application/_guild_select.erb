<% (1..8).each do |i| %>
  <div class="control-group">
    <label class="control-label" for="guild_<%= i %>">Guild <%= i %></label>
    <div class="controls">
      <select id="guild_<%= i %>" name="guild[]">
        <%= raw opts %>
      </select>
    </div>
  </div>
<% end %>
<a href="#" id="guild-clear" class="btn">Clear Guilds</a>
