<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <%= render 'result_header' %>
      <li class="active"><strong>Result for Date</strong></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span6">
    <h3>Result for Date</h3>
  </div>
</div>
<div class="row">
  <div class="span6">
    <p>
      <small>
        <%= link_to("Recent #{data_size_recently}weeks", result_dates_path) %>
        <% if data_size_max > data_size_recently %>
          / <%= link_to("Recent #{data_size_max}weeks", result_dates_path(recently: data_size_max)) %>
        <% end %>
        / <%= link_to("All dates", result_dates_path(all: 1)) %>
      </small>
    </p>
  </div>
</div>
<div class="row">
  <div class="span4">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Forts</th>
          <th>Callers</th>
        </tr>
      </thead>
      <tbody>
        <% @dates.sort.reverse.each do |d| %>
          <tr>
            <td class="span2"><%= divided_date(d) %></td>
            <td class="span1"><%= link_to("Forts", result_forts_path(date: d)) %></td>
            <td class="span1"><%= link_to("Callers", result_callers_path(date: d)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
